{
  "name": "typescript",
  "author": "Microsoft Corp.",
  "homepage": "http://typescriptlang.org/",
  "version": "0.9.5",
  "licenses": [
    {
      "type": "Apache License 2.0",
      "url": "http://typescript.codeplex.com/license"
    }
  ],
  "description": "TypeScript is a language for application scale JavaScript development",
  "keywords": [
    "TypeScript",
    "Microsoft",
    "compiler",
    "language",
    "javascript"
  ],
  "bugs": {
    "url": "http://typescript.codeplex.com/workitem/list/basic"
  },
  "repository": {
    "type": "git",
    "url": "https://git01.codeplex.com/typescript"
  },
  "scripts": {
    "watch:tsc": "tsc --noEmit src/compiler/tsc.ts && esbuild src/compiler/tsc.ts --bundle --sourcemap --platform=node --outfile=dist/tsc.js --watch",
    "watch:rt": "tsc --noEmit src/runtime/rt.ts && esbuild src/runtime/rt.ts --bundle --sourcemap --platform=node --outfile=dist/lib/rt.js --watch",
    "watch:typings": "nodemon -w src/typings -e ts --exec \"npm run build:typings\"",
    "watch": "npm-run-all --parallel watch:*",
    "build": "npm-run-all --parallel build:*",
    "build:typings": "node --loader ts-node/esm scripts/copy-typings.mts",
    "build:tsc": "tsc --noEmit src/compiler/tsc.ts && esbuild src/compiler/tsc.ts --bundle --platform=node --outfile=dist/tsc.js",
    "build:rt": "tsc --noEmit src/runtime/rt.ts && esbuild src/runtime/rt.ts --bundle --platform=node --outfile=dist/lib/rt.js",
    "test:run": "vitest run",
    "test": "vitest",
    "generate": "ts-node src/compiler/syntax/syntaxGenerator.ts && prettier --write src/compiler/syntax/*.generated.ts",
    "debug": "node --inspect ./dist/tsc.js --safe samples/tuple-multiplicity.ts --module commonjs"
  },
  "preferGlobal": true,
  "main": "./dist/typescript.js",
  "bin": {
    "tsc": "./dist/tsc.js"
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "devDependencies": {
    "@types/node": "^18.17.18",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "esbuild": "^0.19.5",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "glob": "^10.3.4",
    "jake": "^10.8.7",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "weak-map": "~1.0.5"
  }
}
