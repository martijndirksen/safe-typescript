{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["scripts/**/*.ts"],
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "nodenext",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "moduleResolution": "nodenext"
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist/*"]
  }
}
